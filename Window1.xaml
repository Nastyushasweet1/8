<Window x:Class="_8.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF445D90"/>
                <GradientStop Color="#FE448F4C" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="label" Content="Вход" HorizontalAlignment="Left" Margin="352,49,0,0" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="24"/>
        <Label x:Name="label1" Content="Адрес эл. почты" HorizontalAlignment="Left" Margin="224,104,0,0" VerticalAlignment="Top" Width="130" Height="29" FontFamily="Arial Black"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="24" Margin="224,138,0,0" TextWrapping="Wrap" Text="Введите почту" VerticalAlignment="Top" Width="221" Foreground="#FFA9A5A5"/>
        <Label x:Name="label2" Content="Пароль" HorizontalAlignment="Left" Height="26" Margin="224,178,0,0" VerticalAlignment="Top" Width="110" FontFamily="Arial Black"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="25" Margin="224,209,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="221" Foreground="#FFAFAFAF"/>
        <Button x:Name="button" Content="Войти" HorizontalAlignment="Left" Height="28" Margin="437,277,0,0" VerticalAlignment="Top" Width="77" Background="#FF64A03D"/>
        <Button x:Name="button1" Content="Регистрация" HorizontalAlignment="Left" Height="28" Margin="224,277,0,0" VerticalAlignment="Top" Width="101" Background="#FF64A03D"/>
    </Grid>
</Window>
